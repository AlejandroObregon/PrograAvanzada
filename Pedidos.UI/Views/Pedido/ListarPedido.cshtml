@model IEnumerable<Pedidos.Abstracciones.ModelosParaUI.ClienteDto>
@{
    ViewBag.Title = "Orden de Pedidos segun cliente";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">

            <h2 class="mb-3">@ViewBag.Title</h2>


            <div class="table-responsive">


                <div class="table-responsive">
                    <table class="table table-striped table-hover table-bordered" id="laTablaDePedido">
                        <thead class="table-dark">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Id)</th>
                                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                                <th>@Html.DisplayNameFor(model => model.Direccion)</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                                    <td class="text-center text-nowrap">

                                        @Html.ActionLink("Pedir", "CrearPedido", new { id = item.Id }, new { @class = "btn btn-sm btn-info" }) 

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#laTablaDePedido').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Spanish.json"
                }
            });
        });
    </script>
}