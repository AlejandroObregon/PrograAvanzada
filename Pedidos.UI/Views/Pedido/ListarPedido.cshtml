
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">

            <h2 class="mb-3">Lista de Pedidos</h2>


            <div class="mb-4 d-flex justify-content-between align-items-center">

                @Html.ActionLink("Crear Nuevo", "CrearPedido", null, new { @class = "btn btn-primary" })

            </div>

            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered" id="laTablaDeProducto">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Cliente</th>
                            <th>Fecha</th>
                            <th>Subtotal</th>
                            <th>I.V.A</th>
                            <th>Total</th>

                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        
                        <tr>
                            <td>1</td>
                            <td>Cliente1</td>
                            <td>14/10/2025</td>
                            <td>200</td>
                            <td>24</td>
                            <td>224</td>
                            <td class="text-center text-nowrap">

                                @Html.ActionLink("Editar", "EditarPedido", new { @class = "btn btn-sm btn-info" }) |
                                @Html.ActionLink("Detalles", "DetallesPedido", new { @class = "btn btn-sm btn-secondary" }) |
                            </td>
                        </tr>
                        
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/Producto/ScriptDeProducto.js"></script>
}