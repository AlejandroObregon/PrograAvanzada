@model Inventario.Abstracciones.ModelosParaUI.InventarioDto

@{
    ViewBag.Title = "Confirmar Eliminación";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-9 col-lg-8">

            <h2 class="mb-4">@ViewBag.Title</h2>

            <div class="alert alert-danger fade show mb-4" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <strong>¡ATENCIÓN!</strong> ¿Está seguro que desea **ELIMINAR** este registro de inventario de forma permanente?
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h4 class="mb-0">Detalles del Repuesto a Eliminar</h4>
                </div>
                <div class="card-body">

                    <dl class="row mb-0">

                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.CodigoDelRepuesto)
                        </dt>
                        <dd class="col-sm-8 border-bottom pb-2">
                            @Html.DisplayFor(model => model.CodigoDelRepuesto)
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.NombreDelRepuesto)
                        </dt>
                        <dd class="col-sm-8 border-bottom pb-2">
                            @Html.DisplayFor(model => model.NombreDelRepuesto)
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.MarcaDelRepuesto)
                        </dt>
                        <dd class="col-sm-8 border-bottom pb-2">
                            @Html.DisplayFor(model => model.MarcaDelRepuesto)
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.Cantidad)
                        </dt>
                        <dd class="col-sm-8 border-bottom pb-2">
                            @Html.DisplayFor(model => model.Cantidad)
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.Estado)
                        </dt>
                        <dd class="col-sm-8">
                            @if (Model.Estado)
                            {
                                <span class="badge bg-success">Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactivo</span>
                            }
                        </dd>

                    </dl>
                </div>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                @Html.HiddenFor(model => model.Id)

                <div class="d-flex justify-content-start gap-3 mt-4">

                    <input type="submit" value="Eliminar" class="btn btn-danger btn-lg" />

                    @Html.ActionLink("Cancelar y Volver", "ListarInventario", null, new { @class = "btn btn-secondary btn-lg" })
                </div>
            }

        </div>
    </div>
</div>