@model IEnumerable<Pedidos.Abstracciones.ModelosParaUI.ProductoDto>

@{
    // Título de la página
    ViewBag.Title = "Listado de Productos";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">

            <h2 class="mb-3">@ViewBag.Title</h2>

            <div class="mb-4 d-flex justify-content-between align-items-center">

                @Html.ActionLink("Crear Nuevo", "CrearProducto", null, new { @class = "btn btn-primary" })

            </div>

            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered" id="laTablaDeProducto">
                    <thead class="table-dark">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Id)</th>
                            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                            <th>@Html.DisplayNameFor(model => model.CategoriaId)</th>
                            <th>@Html.DisplayNameFor(model => model.Precio)</th>
                            <th>@Html.DisplayNameFor(model => model.ImpuestoPorc)</th>
                            <th>@Html.DisplayNameFor(model => model.Stock)</th>
                            <th>@Html.DisplayNameFor(model => model.ImagenUrl)</th>
                            <th>@Html.DisplayNameFor(model => model.Activo)</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                                <td>@Html.DisplayFor(modelItem => item.CategoriaId)</td>
                                <td>@Html.DisplayFor(modelItem => item.Precio)</td>
                                <td>@Html.DisplayFor(modelItem => item.ImpuestoPorc)</td>
                                <td>@Html.DisplayFor(modelItem => item.Stock)</td>
                                <td>@Html.DisplayFor(modelItem => item.ImagenUrl)</td>
                                <td>@Html.DisplayFor(modelItem => item.Activo)</td>
                                <td class="text-center text-nowrap">

                                    @Html.ActionLink("Editar", "EditarProducto", new { id = item.Id }, new { @class = "btn btn-sm btn-info" }) |
                                    @Html.ActionLink("Detalles", "DetallesProducto", new { id = item.Id }, new { @class = "btn btn-sm btn-secondary" }) |
                                    @Html.ActionLink("Eliminar", "EliminarProducto", new { id = item.Id }, new { @class = "btn btn-sm btn-danger" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/Producto/ScriptDeProducto.js"></script>
}