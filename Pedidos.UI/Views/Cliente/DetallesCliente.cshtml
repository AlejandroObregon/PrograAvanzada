@model Pedidos.Abstracciones.ModelosParaUI.ClienteDto

@{
    ViewBag.Title = "Detalles del Cliente";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-9 col-lg-8">

            <h2 class="mb-4">@ViewBag.Title</h2>

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Cliente: @Html.DisplayFor(model => model.Nombre)</h4>
                </div>
                <div class="card-body">

                    <dl class="row mb-0">

                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.Id)
                        </dt>
                        <dd class="col-sm-8 border-bottom pb-2">
                            @Html.DisplayFor(model => model.Id)
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.Nombre)
                        </dt>
                        <dd class="col-sm-8 border-bottom pb-2">
                            @Html.DisplayFor(model => model.Nombre)
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.Cedula)
                        </dt>
                        <dd class="col-sm-8 border-bottom pb-2">
                            @Html.DisplayFor(model => model.Cedula)
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.Correo)
                        </dt>
                        <dd class="col-sm-8 border-bottom pb-2">
                            @Html.DisplayFor(model => model.Correo)
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.Telefono)
                        </dt>
                        <dd class="col-sm-8 border-bottom pb-2">
                            @Html.DisplayFor(model => model.Telefono)
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.Direccion)
                        </dt>
                        <dd class="col-sm-8 border-bottom pb-2">
                            @Html.DisplayFor(model => model.Direccion)
                        </dd>


                    </dl>
                </div>
            </div>

            <div class="mt-4 d-flex justify-content-start gap-2">
                @Html.ActionLink("Editar", "EditarCliente", new { id = Model.Id }, new { @class = "btn btn-warning" })

                @Html.ActionLink("Volver a la Lista", "ListarCliente", null, new { @class = "btn btn-secondary" })
            </div>

        </div>
    </div>
</div>
