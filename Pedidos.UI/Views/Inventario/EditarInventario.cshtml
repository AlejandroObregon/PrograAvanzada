@model Inventario.Abstracciones.ModelosParaUI.InventarioDto

@{
    ViewBag.Title = "Editar Artículo de Inventario";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">

            <h2 class="mb-4">@ViewBag.Title</h2>

            @using (Html.BeginForm("EditarInventario", "Inventario", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="p-4 border rounded shadow-sm bg-light">

                    <h4 class="mb-3">Datos del Repuesto</h4>
                    <hr />

                    @Html.HiddenFor(model => model.Id)

                    @Html.ValidationSummary(true, "Por favor, corrige los siguientes errores:", new { @class = "alert alert-danger" })

                    <div class="mb-3">
                        @Html.LabelFor(model => model.CodigoDelRepuesto, new { @class = "form-label" })
                        @Html.EditorFor(model => model.CodigoDelRepuesto, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CodigoDelRepuesto, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.NombreDelRepuesto, new { @class = "form-label" })
                        @Html.EditorFor(model => model.NombreDelRepuesto, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NombreDelRepuesto, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.MarcaDelRepuesto, new { @class = "form-label" })
                        @Html.EditorFor(model => model.MarcaDelRepuesto, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MarcaDelRepuesto, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.Vehiculo, new { @class = "form-label" })
                        @Html.EditorFor(model => model.Vehiculo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Vehiculo, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.Modelo, new { @class = "form-label" })
                        @Html.EditorFor(model => model.Modelo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Modelo, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.Anio, new { @class = "form-label" })
                        @Html.EditorFor(model => model.Anio, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Anio, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.Cantidad, new { @class = "form-label" })
                        @Html.EditorFor(model => model.Cantidad, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Cantidad, "", new { @class = "text-danger" })
                    </div>


                    <div class="mb-3">
                        @Html.LabelFor(model => model.FechaDeRegistro, new { @class = "form-label" })
                        @Html.EditorFor(model => model.FechaDeRegistro, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                        @Html.ValidationMessageFor(model => model.FechaDeRegistro, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.FechaDeModificacion, new { @class = "form-label" })
                        @Html.EditorFor(model => model.FechaDeModificacion, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                        @Html.ValidationMessageFor(model => model.FechaDeModificacion, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-check form-switch mt-4">
                        @Html.EditorFor(model => model.Estado, new { htmlAttributes = new { @class = "form-check-input" } })
                        @Html.LabelFor(model => model.Estado, "Activo/Inactivo", new { @class = "form-check-label" })
                        @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <input type="submit" value="Guardar Cambios" class="btn btn-success btn-lg" />
                    </div>
                </div>
            }

            <div class="mt-3">
                @Html.ActionLink("Volver a la Lista", "ListarInventario", null, new { @class = "btn btn-secondary btn-sm" })
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        (function () {
            var input = document.getElementById('archivo');
            var img = document.getElementById('previewImg');
            if (input && img) {
                input.addEventListener('change', function (evt) {
                    const file = evt.target.files && evt.target.files[0];
                    if (!file) return;
                    const reader = new FileReader();
                    reader.onload = function (e) { img.src = e.target.result; };
                    reader.readAsDataURL(file);
                });
            }
        })();
    </script>
}
                    <div class="mb-3">
                        <label class="form-label d-block">Imagen actual</label>
                        <img id="previewImg" src="@Url.Action("ImagenDeInventarioPorCodigo", "Inventario", new { codigo = Model.CodigoDelRepuesto })" alt="Imagen del repuesto" style="max-width: 240px; height: auto; border:1px solid #ddd; padding:4px; border-radius:4px;" />
                    </div>

                    <div class="mb-3">
                        <label for="archivo" class="form-label">Cambiar imagen</label>
                        <input type="file" id="archivo" name="archivo" class="form-control" accept="image/*" />
                    </div>
