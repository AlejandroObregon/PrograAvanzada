
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-9 col-lg-8">

            <h2 class="mb-4">@ViewBag.Title</h2>

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Pedido Número: 1</h4>
                </div>
                <div class="card-body">

                    <dl class="row mb-0">

                        <dt class="col-sm-4 text-muted">
                            ID
                        </dt>
                        <dd class="col-sm-8 border-bottom pb-2">
                            1
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            Cliente
                        </dt>
                        <dd class="col-sm-8 border-bottom pb-2">
                            Cliente1
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            Fecha
                        </dt>
                        <dd class="col-sm-8 border-bottom pb-2">
                            14/10/2025
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            Subtotal
                        </dt>
                        <dd class="col-sm-8 border-bottom pb-2">
                            200
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            Impuestos
                        </dt>
                        <dd class="col-sm-8 border-bottom pb-2">
                            24
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            Total
                        </dt>
                        <dd class="col-sm-8 border-bottom pb-2">
                            224
                        </dd>


                    </dl>
                </div>
            </div>

            <div class="mt-4 d-flex justify-content-start gap-2">
                @Html.ActionLink("Editar", "EditarPedido", new { @class = "btn btn-warning" })

                @Html.ActionLink("Volver a la Lista", "ListarPedido", null, new { @class = "btn btn-secondary" })
            </div>

        </div>
    </div>
</div>
